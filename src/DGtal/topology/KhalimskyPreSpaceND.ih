inline
void
DGtal::KhalimskyPreSpaceND< dim, TInteger>::
uProject( Cell & p, const Cell & bound, DGtal::Dimension k ) const
{
  ASSERT( k < DIM );
  ASSERT( uIsOpen(p, k) == uIsOpen(bound, k) );
  p.myCoordinates[ k ] = bound.myCoordinates[ k ];
  ASSERT( uIsValid(p) );
}
//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
bool
DGtal::KhalimskyPreSpaceND< dim, TInteger>::
uNext( Cell & p, const Cell & lower, const Cell & upper ) const
{
  ASSERT( uIsValid(p) );
  ASSERT( uIsValid(lower) );
  ASSERT( uIsValid(upper) );
  ASSERT( uTopology(p) == uTopology(lower)
      &&  uTopology(p) == uTopology(upper) );

  DGtal::Dimension k = NumberTraits<Dimension>::ZERO;
  if ( uKCoord( p, k ) == uKCoord( upper, k ) )
    {
      if ( p == upper ) return false;
      uProject( p, lower, k );
      for ( k = 1; k < DIM; ++k )
        {
          if ( uKCoord( p, k ) == uKCoord( upper, k ) )
            uProject( p, lower, k );
          else
            {
              p.myCoordinates[ k ] = this->updateKCoordHelper( p.myCoordinates[ k ] + 2, k );
              break;
            }
        }
      return true;
    }

  p.myCoordinates[ k ] = this->updateKCoordHelper( p.myCoordinates[ k ] + 2, k );
  return true;
}

