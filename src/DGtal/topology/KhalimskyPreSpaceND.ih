//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
bool
DGtal::KhalimskyPreSpaceND< dim, TInteger>::
uIsValid( const PreCell & p, Dimension k ) const
{
  return cIsValid( p.myCoordinates, k );
}
//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
bool
DGtal::KhalimskyPreSpaceND< dim, TInteger>::
uIsValid( const PreCell & p ) const
{
  return cIsValid( p.myCoordinates );
}
//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
bool
DGtal::KhalimskyPreSpaceND< dim, TInteger>::
cIsValid( const Point & p, Dimension k ) const
{
  return   p[ k ] <= myCellUpper.myCoordinates[ k ]
        && p[ k ] >= myCellLower.myCoordinates[ k ];
}
//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
bool
DGtal::KhalimskyPreSpaceND< dim, TInteger>::
cIsValid( const Point & p ) const
{
  for ( Dimension k = 0; k < DIM; ++ k )
    if ( ! cIsValid( p, k ) )
      return false;

  return true;
}
//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
bool
DGtal::KhalimskyPreSpaceND< dim, TInteger>::
sIsValid( const SPreCell & p, Dimension k ) const
{
  return cIsValid( p.myCoordinates, k );
}
//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
bool
DGtal::KhalimskyPreSpaceND< dim, TInteger>::
sIsValid( const SPreCell & p ) const
{
  return cIsValid( p.myCoordinates );
}
//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
bool
DGtal::KhalimskyPreSpaceND< dim, TInteger>::
isSpaceClosed() const
{
  for ( Dimension i = 0; i < dimension; ++i )
    if ( myClosure[ i ] == OPEN )
      return false;

  return true;
}
//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
bool
DGtal::KhalimskyPreSpaceND< dim, TInteger>::
isSpaceClosed( Dimension k ) const
{
  return myClosure[ k ] != OPEN;
}
//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
bool
DGtal::KhalimskyPreSpaceND< dim, TInteger>::
isSpacePeriodic() const
{
  for ( Dimension i = 0; i < dimension; ++i )
    if ( myClosure[ i ] != PERIODIC )
      return false;

  return true;
}
//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
bool
DGtal::KhalimskyPreSpaceND< dim, TInteger>::
isSpacePeriodic( Dimension k ) const
{
  return myClosure[ k ] == PERIODIC;
}
//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
bool
DGtal::KhalimskyPreSpaceND< dim, TInteger>::
isAnyDimensionPeriodic() const
{
  return this->isAnyDimensionPeriodicHelper();
}
//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
typename DGtal::KhalimskyPreSpaceND< dim, TInteger>::Cell
DGtal::KhalimskyPreSpaceND< dim, TInteger>::
uCell( const PreCell & c ) const
{
  return uCell( c.myCoordinates );
}
//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
typename DGtal::KhalimskyPreSpaceND< dim, TInteger>::Cell
DGtal::KhalimskyPreSpaceND< dim, TInteger>::
uCell( const Point & kp ) const
{
  Cell cell( this->updateKCoordsHelper( kp ) );
  ASSERT( uIsValid(cell) );
  return cell;
}
//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
typename DGtal::KhalimskyPreSpaceND< dim, TInteger>::Cell
DGtal::KhalimskyPreSpaceND< dim, TInteger>::
uCell( Point p, const PreCell & c ) const
{
  for ( DGtal::Dimension i = 0; i < dimension; ++i )
    {
      p[ i ] += p[ i ] + ( NumberTraits<Integer>::odd( c.myCoordinates[ i ] ) ? 1 : 0 );
    }
  return uCell( p );
}
//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
typename DGtal::KhalimskyPreSpaceND< dim, TInteger>::SCell
DGtal::KhalimskyPreSpaceND< dim, TInteger>::
sCell( const SPreCell & c  ) const
{
  return sCell( c.myCoordinates, c.myPositive ? POS : NEG );
}
//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
typename DGtal::KhalimskyPreSpaceND< dim, TInteger>::SCell
DGtal::KhalimskyPreSpaceND< dim, TInteger>::
sCell( const Point & kp, Sign sign ) const
{
  SCell cell( this->updateKCoordsHelper( kp ), sign == POS );
