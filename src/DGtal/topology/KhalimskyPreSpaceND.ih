typename DGtal::KhalimskyPreSpaceND< dim, TInteger >::SCell
DGtal::KhalimskyPreSpaceND< dim, TInteger >::
sProjection( SCell p, const SCell & bound, DGtal::Dimension k ) const
{
  ASSERT( k < DIM );
  ASSERT( sIsOpen(p, k) == sIsOpen(bound, k) );
  p.myCoordinates[ k ] = bound.myCoordinates[ k ];
  ASSERT( sIsValid(p) );
  return p;
}
//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
void
DGtal::KhalimskyPreSpaceND< dim, TInteger >::
sProject( SCell & p, const SCell & bound, DGtal::Dimension k ) const
{
  ASSERT( k < DIM );
  ASSERT( sIsOpen(p, k) == sIsOpen(bound, k) );
  p.myCoordinates[ k ] = bound.myCoordinates[ k ];
  ASSERT( sIsValid(p) );
}
//-----------------------------------------------------------------------------
template < DGtal::Dimension dim, typename TInteger>
inline
bool
DGtal::KhalimskyPreSpaceND< dim, TInteger >::
sNext( SCell & p, const SCell & lower, const SCell & upper ) const
{
  ASSERT( sIsValid(p) );
  ASSERT( sIsValid(lower) );
  ASSERT( sIsValid(upper) );
  ASSERT( sTopology(p) == sTopology(lower)
      &&  sTopology(p) == sTopology(upper) );

  DGtal::Dimension k = NumberTraits<Dimension>::ZERO;
  if ( sCoord( p, k ) == sCoord( upper, k ) )
    {
      if ( p == upper ) return false;
      sProject( p, lower, k );
      for ( k = 1; k < DIM; ++k )
        {
          if ( sCoord( p, k ) == sCoord( upper, k ) )
            sProject( p, lower, k );
          else
            {
              p.myCoordinates[ k ] = this->updateKCoordHelper( p.myCoordinates[ k ] + 2, k );
              break;
            }
        }
      return true;
    }

  p.myCoordinates[ k ] = this->updateKCoordHelper( p.myCoordinates[ k ] + 2, k );
  return true;
}

