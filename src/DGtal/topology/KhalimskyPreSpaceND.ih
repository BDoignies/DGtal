DGtal::KhalimskyPreSpaceND< dim, TInteger>::
uFirst( const PreCell & p, DGtal::Dimension k ) const
{
  ASSERT( k < DIM );

  return myClosure[ k ] == OPEN ?
        2 * myLower[ k ] + ( NumberTraits<Integer>::odd( p.myCoordinates[ k ] ) ? 1 : 2 )
      : 2 * myLower[ k ] + ( NumberTraits<Integer>::odd( p.myCoordinates[ k ] ) ? 1 : 0 );
