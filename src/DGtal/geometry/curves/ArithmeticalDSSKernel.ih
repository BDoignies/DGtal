template <typename TCoordinate, unsigned short adjacency>
template <typename TInteger>
inline
typename DGtal::ArithmeticalDSSKernel<TCoordinate,adjacency>::Vector 
DGtal::ArithmeticalDSSKernel<TCoordinate,adjacency>
::shift(const TInteger& a, const TInteger& b) 
{
  Vector res;
  if (b == 0)
    {
      if (a == 0)     //no octant
	res = Vector(0,0); 
      else if (a > 0) //octant 2
	res = Vector(1,0); 
      else // (a < 0) //octant 6
	res = Vector(-1,0); 
    }
  else if (b > 0)
    {
      if (a == 0)     //octant 0 
	res = Vector(0,-1); 
      else if (a > 0)
	{
	  if (b > a)  //octant 0
	    res = Vector(0,-1); 
	  else        //octant 1
	    res = Vector(1,0); 
	}
      else // (a < 0)
	{ 
	  if (b >= -a) //octant 7
	    res = Vector(0,-1); 
	  else         //octant 6
	    res = Vector(-1,0); 
	}	    
    }
  else // (b < 0) 
    { 
      if (a == 0)      //octant 4
	res = Vector(0,1); 
      else if (a > 0)
	{
	  if (-b >= a) //octant 3
	    res = Vector(0,1); 
	  else         //octant 2
	    res = Vector(1,0); 
	}
      else // (a < 0) 
	{
	  if (-b > -a) //octant 4
	    res = Vector(0,1); 
	  else         //octant 5
	    res = Vector(-1,0); 
	}
    }
  return res; 
}

// ----------------------------------------------------------------------------
template <typename TCoordinate, unsigned short adjacency>
template <typename TInteger>
inline
typename DGtal::ArithmeticalDSSKernel<TCoordinate,adjacency>::Steps 
DGtal::ArithmeticalDSSKernel<TCoordinate,adjacency>
::steps(const TInteger& a, const TInteger& b) 
{
  Steps steps; 
  if (b == 0)
    {
      if (a == 0) 
	{ //no octant
	  steps.first = Vector(0,0); 
	  steps.second = Vector(0,0); 
	}
      else if (a > 0)
	{ //octant 2
	  steps.first = Vector(0,1); 
	  steps.second = Vector(0,0); 
	}
      else // (a < 0)
	{ //octant 6
	  steps.first = Vector(0,-1); 
	  steps.second = Vector(0,0); 
	}	    
    }
  else if (b > 0)
    {
      if (a == 0)
	{ //octant 0
	  steps.first = Vector(1,0); 
	  steps.second = Vector(0,0); 
	}
      else if (a > 0)
	{
	  if (b == a)
	    {
	      steps.first = Vector(1,1); 
	      steps.second = Vector(0,0); 
	    }
	  else if (b > a)
	    { //octant 0
	      steps.first = Vector(1,0); 
	      steps.second = Vector(1,1); 
	    }
	  else // (b < a)
	    { //octant 1
	      steps.second = Vector(0,1); 
	      steps.first = Vector(1,1); 
	    }
	}
      else //(a < 0)
	{ 
	  if (b == -a)
	    {
	      steps.first = Vector(1,-1); 
	      steps.second = Vector(0,0); 
	    }
	  else if (b > -a)
	    { //octant 7
	      steps.second = Vector(1,0); 
	      steps.first = Vector(1,-1); 
	    }
	  else // (b < -a)
	    { //octant 6
	      steps.first = Vector(0,-1); 
	      steps.second = Vector(1,-1); 
	    }
	}	    
    }
  else // (b < 0)
    { 
      if (a == 0)
	{ //octant 4
	  steps.first = Vector(-1,0); 
	  steps.second = Vector(0,0); 
	}
      else if (a > 0)
	{
	  if (-b == a)
	    {
	      steps.first = Vector(-1,1); 
	      steps.second = Vector(0,0); 
	    }
	  else if (-b > a)
	    { //octant 3
	      steps.second = Vector(-1,0); 
	      steps.first = Vector(-1,1); 
	    }
	  else // (-b < a)
	    { //octant 2
	      steps.first = Vector(0,1); 
	      steps.second = Vector(-1,1); 
	    }	    
	}
      else // (a < 0)
	{
	  if (-b == -a)
	    {
	      steps.first = Vector(-1,-1); 
	      steps.second = Vector(0,0); 
	    }
	  else if (-b > -a)
	    { //octant 4
	      steps.first = Vector(-1,0); 
	      steps.second = Vector(-1,-1); 
	    }
	  else // (-b < -a)
	    { //octant 5
	      steps.second = Vector(0,-1); 
	      steps.first = Vector(-1,-1); 
	    }
	}
    }
  return steps; 
}

// ----------------------------------------------------------------------------
template <typename TCoordinate, unsigned short adjacency>
template <typename TInteger>
inline
TInteger 
DGtal::ArithmeticalDSSKernel<TCoordinate,adjacency>
::norm(const TInteger& a, const TInteger& b) 
{
  if (b >= 0)
    {
      if (a >= 0)
	{
	  if (b >= a)
	    return b;
	  else 
	    return a; 
	}
      else 
	{
	  if (b >= -a)
	    return b;
	  else 
	    return -a; 
	}
    }
  else
    {
      if (a >= 0)
	{
	  if (-b >= a)
	    return -b;
	  else 
	    return a; 
	}
      else 
	{
	  if (-b >= -a)
	    return -b;
	  else 
	    return -a; 
	}
    }
}

// ----------------------------------------------------------------------------
template <typename TCoordinate>
template <typename TInteger>
inline
typename DGtal::ArithmeticalDSSKernel<TCoordinate,4>::Vector 
DGtal::ArithmeticalDSSKernel<TCoordinate,4>
::shift(const TInteger& a, const TInteger& b) 
{
  Vector res; 
  if (b == 0)
    {
      if (a == 0)
	{ //no quadrant
	  res = Vector(0,0); 
	}
      else if (a > 0)
	{ //quadrant 1
	  res = Vector(1,1); 
	}
      else // (a < 0)
	{ //quadrant 3
	  res = Vector(-1,-1); 
	}	    
    }
  else if (b > 0)
    {
      if (a >= 0)
	{ //quadrant 0
	  res = Vector(1,-1); 
	}
      else // (a < 0) 
	{ //quadrant 3
	  res = Vector(-1,-1); 
	}	    
    }
  else // (b < 0) 
    { 
      if (a > 0)
	{ //quadrant 1
	  res = Vector(1,1); 
	}
      else // (a <= 0)
	{ //quadrant 2
	  res = Vector(-1,1); 
	}
    }
  return res; 
}

// ----------------------------------------------------------------------------
template <typename TCoordinate>
template <typename TInteger>
inline
typename DGtal::ArithmeticalDSSKernel<TCoordinate,4>::Steps 
DGtal::ArithmeticalDSSKernel<TCoordinate,4>
::steps(const TInteger& a, const TInteger& b) 
{
  Steps steps;
  if (b == 0)
    {
      if (a == 0)
	{ //no quadrant
	  steps.first = Vector(0,0); 
	  steps.second = Vector(0,0); 
	}
      else if (a > 0)
	{ 
	  steps.first = Vector(0,1); 
	  steps.second = Vector(0,0); 
	}
      else // (a < 0)
	{ 
	  steps.first = Vector(0,-1); 
	  steps.second = Vector(0,0); 
	}	    
    }
  else if (b > 0)
    {
      if (a == 0)
	{
	  steps.first = Vector(1,0); 
	  steps.second = Vector(0,0); 
	}
      else if (a > 0)
	{ //quadrant 0
	  steps.first = Vector(1,0); 
	  steps.second = Vector(0,1); 
	}
      else // (a < 0) 
	{ //quadrant 3
	  steps.second = Vector(1,0); 
	  steps.first = Vector(0,-1); 
	}	    
    }
  else // (b < 0) 
    { 
      if (a == 0)
	{
	  steps.first = Vector(-1,0); 
	  steps.second = Vector(0,0); 
	}
      else if (a > 0)
	{ //quadrant 1
	  steps.second = Vector(-1,0); 
	  steps.first = Vector(0,1); 
	}
      else // (a < 0)
	{ //quadrant 2
	  steps.first = Vector(-1,0); 
	  steps.second = Vector(0,-1); 
	}
    }
  return steps; 
}

// ----------------------------------------------------------------------------
template <typename TCoordinate>
template <typename TInteger>
inline
TInteger 
DGtal::ArithmeticalDSSKernel<TCoordinate,4>
::norm(const TInteger& a, const TInteger& b) 
{
  if (b >= 0)
    {
      if (a >= 0)
	return b+a; 
     else 
       return b-a; 
    }
  else
    {
      if (a >= 0)
	return -b+a; 
      else 
	return -b-a; 
    }
}
