// ----------------------- Standard services ------------------------------

// ------------------------------------------------------------------------
template < DGtal::concepts::CInteger TInteger, typename Index >
inline
DGtal::detail::PointOnProbingRay<TInteger,Index>::
PointOnProbingRay (Permutation const& aSigma, TInteger const& aPosition)
    : mySigma(aSigma), myPosition(aPosition)
{
}


// ------------------------------------------------------------------------
template < DGtal::concepts::CInteger TInteger, typename Index >
inline
DGtal::detail::PointOnProbingRay<TInteger,Index>
DGtal::detail::PointOnProbingRay<TInteger,Index>::getBase () const
{
    return PointOnProbingRay(mySigma, 0);
}

// ------------------------------------------------------------------------
template < DGtal::concepts::CInteger TInteger, typename Index >
inline
typename DGtal::detail::PointOnProbingRay<TInteger,Index>::Permutation const&
DGtal::detail::PointOnProbingRay<TInteger,Index>::sigma () const
{
    return mySigma;
}

// ------------------------------------------------------------------------
template < DGtal::concepts::CInteger TInteger, typename Index >
inline
Index
DGtal::detail::PointOnProbingRay<TInteger,Index>::sigma (Index const& aIndex) const
{
    assert(aIndex >= 0 && aIndex <= 2);
    return mySigma[aIndex];
}

// ------------------------------------------------------------------------
template < DGtal::concepts::CInteger TInteger, typename Index >
inline
TInteger const&
DGtal::detail::PointOnProbingRay<TInteger,Index>::position () const
{
    return myPosition;
}

// ------------------------------------------------------------------------
template < DGtal::concepts::CInteger TInteger, typename Index >
template < typename Point >
inline
Point
DGtal::detail::PointOnProbingRay<TInteger,Index>::relativePoint (std::array<Point, 3> const& aM) const {
  return -aM[mySigma[0]] + aM[mySigma[1]] + aM[mySigma[2]] * myPosition;
}

// ------------------------------------------------------------------------
template < DGtal::concepts::CInteger TInteger, typename Index >
inline
bool
DGtal::detail::PointOnProbingRay<TInteger,Index>::operator== (PointOnProbingRay const& aRay) const
{
    return (mySigma == aRay.mySigma) && (myPosition == aRay.position());
}

// ------------------------------------------------------------------------
template < DGtal::concepts::CInteger TInteger, typename Index >
inline
bool
DGtal::detail::PointOnProbingRay<TInteger,Index>::operator!= (PointOnProbingRay const& aRay) const
{
    return !(*this == aRay);
}

// ------------------------------------------------------------------------
template < DGtal::concepts::CInteger TInteger, typename Index >
inline
bool
DGtal::detail::PointOnProbingRay<TInteger,Index>::operator<= (PointOnProbingRay const& aRay) const
{
    return (mySigma == aRay.mySigma) && (myPosition <= aRay.position());
}

// ------------------------------------------------------------------------
template < DGtal::concepts::CInteger TInteger, typename Index >
inline
DGtal::detail::PointOnProbingRay<TInteger,Index>
DGtal::detail::PointOnProbingRay<TInteger,Index>::next (TInteger const& aInc) const
{
    return PointOnProbingRay(mySigma, myPosition + aInc);
}

// ------------------------------------------------------------------------
template < DGtal::concepts::CInteger TInteger, typename Index >
inline
DGtal::detail::PointOnProbingRay<TInteger,Index>
DGtal::detail::PointOnProbingRay<TInteger,Index>::previous (TInteger const& aDec) const
{
    return PointOnProbingRay(mySigma, myPosition - aDec);
}

// ------------------------------------------------------------------------
template < typename Integer, typename Index >
inline
std::ostream&
DGtal::detail::operator<< (std::ostream& aOs, PointOnProbingRay<Integer,Index> const& aRay)
{
    aOs << "sigma=(" <<
        aRay.sigma(0) << ", " <<
        aRay.sigma(1) << ", " <<
        aRay.sigma(2) << "); i=" << aRay.position();
    return aOs;
}
