/**
 * Constructor.
 * @param aBegin, begin iterator on a digital curve
 * @param aEnd, end iterator on a digital curve
 */
  template <typename TIterator, typename TSegment>
DGtal::MaximalSegments<TIterator,TSegment>::MaximalSegments
(const Iterator& aBegin, const Iterator& aEnd)
 : myBegin(aBegin),
	 myLast(aBegin),
	 myEnd(aEnd),
	 myFirstMaximalSegmentBack(aBegin),
	 isClosed(true)
{
}

/**
 * Constructor.
 * @param aBegin, begin iterator on a digital curve
 * @param aEnd, end iterator on a digital curve
 */
  template <typename TIterator, typename TSegment>
DGtal::MaximalSegments<TIterator,TSegment>::MaximalSegments
(const Iterator& aBegin, const Iterator& aEnd, const bool& aFlag)
 : myBegin(aBegin),
	 myLast(aBegin),
	 myEnd(aEnd),
	 myFirstMaximalSegmentBack(aBegin),
	 isClosed(aFlag)
{
}

/**
 * Destructor.
 */
  template <typename TIterator, typename TSegment>
inline
DGtal::MaximalSegments<TIterator,TSegment>::~MaximalSegments()
{
}

/**
 * Iterator service.
 * @return an iterator pointing on the first segment
 * of the digital curve.
 */
  template <typename TIterator, typename TSegment>
inline
typename DGtal::MaximalSegments<TIterator,TSegment>::ConstIterator 
DGtal::MaximalSegments<TIterator,TSegment>::begin() 
{
  return ConstIterator(this, myBegin);
}

/**
 * Iterator service.
 * @return an iterator pointing after the last segment
 * of the digital curve.
 */
  template <typename TIterator, typename TSegment>
inline
typename DGtal::MaximalSegments<TIterator,TSegment>::ConstIterator 
DGtal::MaximalSegments<TIterator,TSegment>::end() 
{
  return ConstIterator(this, myEnd);
}


