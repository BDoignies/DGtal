template <DGtal::concepts::CSpace TSpace, DGtal::concepts::CEuclideanRing TValue>
inline
void
DGtal::InexactPredicateLpSeparableMetric<TSpace, TValue>::selfDisplay ( std::ostream & out ) const
{
  out << "[InexactPredicateLpSeparableMetric] p="<<myExponent;
}
