template <typename TDistance, typename TPointPredicate>
inline
DGtal::FMM<TDistance, TPointPredicate>::FMM(AcceptedPointSet& aSet, const Distance& aM, const PointPredicate& aPointPredicate): 
myAcceptedPoints( aSet ), myM( aM ), myPointPredicate( aPointPredicate ), 
myAreaThreshold( std::numeric_limits<Area>::max() ), 
myDistanceValueThreshold( std::numeric_limits<DistanceValue>::max() )
{
  if (myAcceptedPoints.size() == 0) throw InputException(); 
  init(); 
}


template <typename TDistance, typename TPointPredicate>
inline
DGtal::FMM<TDistance, TPointPredicate>::FMM(AcceptedPointSet& aSet, const Distance& aM, const PointPredicate& aPointPredicate, const Area& aAreaThreshold, const DistanceValue& aDistanceValueThreshold): 
myAcceptedPoints( aSet ), myM( aM ), myPointPredicate( aPointPredicate ), 
myAreaThreshold( aAreaThreshold ), 
myDistanceValueThreshold( aDistanceValueThreshold )
{
  if (myAcceptedPoints.size() == 0) throw InputException(); 
  init();
}


template <typename TDistance, typename TPointPredicate>
inline
DGtal::FMM<TDistance, TPointPredicate>::~FMM()
{
}

///////////////////////////////////////////////////////////////////////////////
// Static functions :


template <typename TDistance, typename TPointPredicate>
template <typename TIteratorOnPoints>
void
DGtal::FMM<TDistance, TPointPredicate>
::initInnerPoints(const TIteratorOnPoints& itb, const TIteratorOnPoints& ite, 
		  AcceptedPointSet& aMap, 
		  const DistanceValue& aDistanceValue)
{
  TIteratorOnPoints it = itb; 
  for ( ; it != ite; ++it) 
    {
      aMap.insert( PointDistanceValue(*it,aDistanceValue) ); 
    }
}

template <typename TDistance, typename TPointPredicate>
template <typename TIteratorOnPairs>
void
DGtal::FMM<TDistance, TPointPredicate>
::initIncidentPoints(const TIteratorOnPairs& itb, const TIteratorOnPairs& ite, 
		     AcceptedPointSet& aMap, 
		     const DistanceValue& aDistanceValue, 
		     bool aFlagIsPositive)
{
  DistanceValue k = -1; 
  if (aFlagIsPositive) k = 1; 

  TIteratorOnPairs it = itb; 
  for ( ; it != ite; ++it) 
    {
      Point inner( it->first ); 
      Point outer( it->second ); 
      aMap.insert( PointDistanceValue(inner,k*aDistanceValue) ); 
      aMap.insert( PointDistanceValue(outer,-k*aDistanceValue) ); 
    }
}

