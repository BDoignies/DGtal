DGtal::ExactPredicateLpWeightedSeparableMetric<T,2,P>::binarySearchHidden(const Abscissa &udim, 
                                                                          const Abscissa &vdim,
                                                                          const Promoted &nu,
                                                                          const Promoted &nv,
                                                                          const Abscissa &lower,
                                                                          const Abscissa &upper) const
