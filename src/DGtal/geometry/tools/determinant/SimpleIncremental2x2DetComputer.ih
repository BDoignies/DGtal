template <typename TI, DGtal::concepts::CEuclideanRing TResultInteger>
inline
DGtal::SimpleIncremental2x2DetComputer<TI, TResultInteger>::SimpleIncremental2x2DetComputer()
  : myA (NumberTraits<ResultInteger>::ZERO),  
    myB (NumberTraits<ResultInteger>::ZERO), 
    myAY (NumberTraits<ResultInteger>::ZERO),  
    myBX (NumberTraits<ResultInteger>::ZERO),
    myDet (NumberTraits<ResultInteger>::ZERO),  
    myX (NumberTraits<ResultInteger>::ZERO),  
    myY (NumberTraits<ResultInteger>::ZERO),  
    myDX (NumberTraits<ResultInteger>::ZERO),  
    myDY (NumberTraits<ResultInteger>::ZERO),  
    myADY (NumberTraits<ResultInteger>::ZERO),  
    myBDX (NumberTraits<ResultInteger>::ZERO),  
    myDDet (NumberTraits<ResultInteger>::ZERO), 
    myZero (NumberTraits<ResultInteger>::ZERO)
{
}

// ---------------------------------------------------------------------------
template <typename TI, DGtal::concepts::CEuclideanRing TResultInteger>
inline
DGtal::SimpleIncremental2x2DetComputer<TI, TResultInteger>::SimpleIncremental2x2DetComputer(const DGtal::SimpleIncremental2x2DetComputer<TI, TResultInteger>& aOther)
  : myA (aOther.myA),  
    myB (aOther.myB), 
    myAY (aOther.myAY),  
    myBX (aOther.myBX), 
    myDet (aOther.myDet),
    myX (aOther.myX),  
    myY (aOther.myY), 
    myDX (aOther.myDX),  
    myDY (aOther.myDY), 
    myADY (aOther.myADY),  
    myBDX (aOther.myBDX), 
    myDDet (aOther.myDDet),
    myZero (aOther.myZero)
{
}

// ---------------------------------------------------------------------------
template <typename TI, DGtal::concepts::CEuclideanRing TResultInteger>
inline
DGtal::SimpleIncremental2x2DetComputer<TI, TResultInteger>& 
DGtal::SimpleIncremental2x2DetComputer<TI, TResultInteger>::operator=(const DGtal::SimpleIncremental2x2DetComputer<TI, TResultInteger>& aOther)
{
  if (this != &aOther)
    {
      myA = aOther.myA; 
      myB = aOther.myB; 
      myAY = aOther.myAY; 
      myBX = aOther.myBX; 
      myDet = aOther.myDet; 
      myX = aOther.myX; 
      myY = aOther.myY; 
      myDX = aOther.myDX; 
      myDY = aOther.myDY; 
      myADY = aOther.myADY; 
      myBDX = aOther.myBDX; 
      myDDet = aOther.myDDet; 
    }
  return *this; 
}

// ---------------------------------------------------------------------------
template <typename TI, DGtal::concepts::CEuclideanRing TResultInteger>
inline
DGtal::SimpleIncremental2x2DetComputer<TI, TResultInteger>::~SimpleIncremental2x2DetComputer()
{
}

// ---------------------------------------------------------------------------
template <typename TI, DGtal::concepts::CEuclideanRing TResultInteger>
inline
void 
DGtal::SimpleIncremental2x2DetComputer<TI, TResultInteger>::init(const ArgumentInteger& aA, const ArgumentInteger& aB)
{
  //memorize the first column vector
  myA = static_cast<ResultInteger>(aA); 
  myB = static_cast<ResultInteger>(aB);
  //clear members used to memorize old values
  myX = NumberTraits<ResultInteger>::ZERO; 
  myY = NumberTraits<ResultInteger>::ZERO;  
  myDet = NumberTraits<ResultInteger>::ZERO; 
}

// ---------------------------------------------------------------------------
template <typename TI, DGtal::concepts::CEuclideanRing TResultInteger>
inline
typename DGtal::SimpleIncremental2x2DetComputer<TI, TResultInteger>::ResultInteger
DGtal::SimpleIncremental2x2DetComputer<TI, TResultInteger>::operator()(const ArgumentInteger& aX, const ArgumentInteger& aY) const
{
  //compute the difference with the last second column vector
  myDX = aX - static_cast<ResultInteger>(myX); 
  myDY = aY - static_cast<ResultInteger>(myY); 

  //memorize the second column vector for the next computation
  myX = aX; 
  myY = aY; 

  if (myDX == NumberTraits<ResultInteger>::ZERO)
    {
      partialComputation(); 
    }
  else if (myDX == NumberTraits<ResultInteger>::ONE)
    { 
      myDet -= myB; 
      partialComputation(); 
    }
  else if (myDX == -NumberTraits<ResultInteger>::ONE)
    { 
      myDet += myB;
      partialComputation(); 
    }
  else
    {
      myBDX = myB * myDX;
      myDet -= myBDX;
      partialComputation(); 
    }
  return myDet; 
}

// ---------------------------------------------------------------------------
template <typename TI, DGtal::concepts::CEuclideanRing TResultInteger>
inline
typename DGtal::SimpleIncremental2x2DetComputer<TI, TResultInteger>::ResultInteger
DGtal::SimpleIncremental2x2DetComputer<TI, TResultInteger>::operator()(const ArgumentInteger& aA, const ArgumentInteger& aB, 
							  const ArgumentInteger& aX, const ArgumentInteger& aY)
{
  init(aA,aB); 
  return operator()(aX, aY); 
}


// ---------------------------------------------------------------------------
template <typename TI, DGtal::concepts::CEuclideanRing TResultInteger>
inline
void
DGtal::SimpleIncremental2x2DetComputer<TI, TResultInteger>::partialComputation() const
{
  if (myDY != NumberTraits<ResultInteger>::ZERO)
    {
      if (myDY == NumberTraits<ResultInteger>::ONE)
	{ 
	  myDet += myA;
	}
      else if (myDY == -NumberTraits<ResultInteger>::ONE)
	{ 
	  myDet -= myA;
	}
      else
	{
	  myADY = myA * myDY;
	  myDet += myADY;
	}
    }
}

// ---------------------------------------------------------------------------
template <typename TI, DGtal::concepts::CEuclideanRing TResultInteger>
inline
void
DGtal::SimpleIncremental2x2DetComputer<TI, TResultInteger>::selfDisplay ( std::ostream & out ) const
{
  out << "[SimpleIncremental2x2DetComputer]";
}

// ---------------------------------------------------------------------------
template <typename TI, DGtal::concepts::CEuclideanRing TResultInteger>
inline
bool
DGtal::SimpleIncremental2x2DetComputer<TI, TResultInteger>::isValid() const
{
  return true;
}



