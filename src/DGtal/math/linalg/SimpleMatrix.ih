/**
 * Destructor.
 */
template <DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
DGtal::SimpleMatrix<TComponent,TM, TN>::~SimpleMatrix()
{
}


/**
 * Constructor.
 */
template <DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
DGtal::SimpleMatrix<TComponent,TM, TN>::SimpleMatrix()
{
  for ( DGtal::Dimension i = 0; i < TM*TN; ++i )
    myValues[ i ] = NumberTraits<Component>::ZERO;
  const Component one       =  NumberTraits<Component>::ONE;
  const Component minus_one = -NumberTraits<Component>::ONE;
  //Cofactor coefs computation
  for (DGtal::Dimension i=0; i<TM; i++)
    for (DGtal::Dimension j=0; j<TN; j++)
      myCofactorCoefs[i*N+j] = ( (i+j) & 1 )
        ? minus_one : one;
}

/**
 * Constructor.
 */
template <DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
DGtal::SimpleMatrix<TComponent,TM, TN>::SimpleMatrix(std::initializer_list<TComponent> values)
{
  DGtal::Dimension i = 0;
  for ( const TComponent *p = values.begin(); p != values.end() && i < TM*TN; ++p, ++i )
    myValues[ i ] = *p;
  for ( ; i < TM*TN; ++i )
    myValues[ i ] = NumberTraits<Component>::ZERO;

  const Component one       = NumberTraits<Component>::ONE;
  const Component minus_one = -NumberTraits<Component>::ONE;
  // Cofactor coefs computation
  for ( i = 0; i < TM; i++ )
    for ( DGtal::Dimension j       = 0; j < TN; j++ )
      myCofactorCoefs[ i * N + j ] = ( ( i + j ) & 1 ) ? minus_one : one;
}
//------------------------------------------------------------------------------

template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
DGtal::SimpleMatrix<TComponent ,TM, TN>::SimpleMatrix(const Self& other)
{
  for ( DGtal::Dimension i = 0; i < M*N; ++i )
  {
    myValues[ i ] = other.myValues[i];
    myCofactorCoefs[ i ] = other.myCofactorCoefs[i];
  }
}

//---------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
void
DGtal::SimpleMatrix<TComponent, TM, TN>::clear()
{
  for ( DGtal::Dimension i = 0; i < M*N; ++i )
    myValues[ i ] = NumberTraits<TComponent>::ZERO;
}
//---------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
void
DGtal::SimpleMatrix<TComponent, TM, TN>::constant(const TComponent &aSc)
{
  for ( DGtal::Dimension i = 0; i < M*N; ++i )
    myValues[ i ] = aSc;
}
//---------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension M, DGtal::Dimension N>
inline
void
DGtal::SimpleMatrix<TComponent, M,N>::identity( ) 
{
  BOOST_STATIC_ASSERT( M == N);

  //fast clear
  this->clear();
  for (DGtal::Dimension i=0; i<M; i++)
        this->setComponent( i, i , NumberTraits<TComponent>::ONE);
}
//---------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
typename DGtal::SimpleMatrix<TComponent, TM, TN>::RowVector
DGtal::SimpleMatrix<TComponent, TM, TN>::row(const DGtal::Dimension i) const
{
  ASSERT(i<M);
  RowVector v;
  for ( DGtal::Dimension j = 0; j < N; ++j )
    v[ j ] = this->operator()(i,j);
  return v;
}
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
typename DGtal::SimpleMatrix<TComponent, TM, TN>::ColumnVector
DGtal::SimpleMatrix<TComponent, TM, TN>::column(const DGtal::Dimension j) const
{
  ASSERT(j<N);
  ColumnVector v;
  for ( DGtal::Dimension i = 0; i < M; ++i )
    v[ i ] = this->operator()(i,j);
  return v;
}
//---------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
template<typename TC>
inline
DGtal::SimpleMatrix<TComponent, TM, TN> &
DGtal::SimpleMatrix<TComponent, TM, TN>::operator=(const SimpleMatrix<TC,M,N>& other)
{
  for ( DGtal::Dimension i = 0; i < M*N; ++i )
    myValues[ i ] = static_cast<TComponent>(other.myValues[i]);
  return *this;
}

//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
DGtal::SimpleMatrix<TComponent, TM, TN> 
DGtal::SimpleMatrix<TComponent, TM, TN>::operator+(const Self& other) const
{
  SimpleMatrix<TComponent,TM,TN> res;
  for ( DGtal::Dimension i = 0; i < M*N; ++i )
    res.myValues[ i ] = this->myValues[i] + other.myValues[i];
  return res;
}
//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
DGtal::SimpleMatrix<TComponent, TM, TN> &
DGtal::SimpleMatrix<TComponent, TM, TN>::operator+=(const Self& other)
{
  for ( DGtal::Dimension i = 0; i < M*N; ++i )
    myValues[ i ] += other.myValues[i];
  return *this;
}
//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension M, DGtal::Dimension N>
inline
TComponent
DGtal::SimpleMatrix<TComponent, M,N>::cofactor(const DGtal::Dimension i,
				      const DGtal::Dimension j ) const
{
  BOOST_STATIC_ASSERT(M == N);
  return minorDeterminant(i,j)*myCofactorCoefs[i*N+j];
}
//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension M, DGtal::Dimension N>
inline
DGtal::SimpleMatrix<TComponent, M,N>
DGtal::SimpleMatrix<TComponent, M,N>::cofactor( ) const
{
  DGtal::SimpleMatrix<TComponent, M,N> mat;
  BOOST_STATIC_ASSERT(M == N);
  
  for (DGtal::Dimension i=0; i<M; i++)
    for (DGtal::Dimension j=0; j<M; j++)
      mat.setComponent( i, j , cofactor(i,j));

  return mat;
}
//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension M, DGtal::Dimension N>
inline
TComponent
DGtal::SimpleMatrix<TComponent, M,N>::minorDeterminant(const DGtal::Dimension i, 
                                              const DGtal::Dimension j) const
{
  return SimpleMatrixSpecializations<Self,M,N>::minorDeterminant(*this,i,j);
}
//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension M, DGtal::Dimension N>
inline
TComponent
DGtal::SimpleMatrix<TComponent, M,N>::determinant() const
{
  return SimpleMatrixSpecializations<Self,M,N>::determinant(*this);
}

   //------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
typename DGtal::SimpleMatrix<TComponent, TM, TN> 
DGtal::SimpleMatrix<TComponent, TM, TN>::inverse() const
{
  BOOST_STATIC_ASSERT(TM == TN);

  SimpleMatrix<TComponent,TM,TM> r = cofactor().transpose();

  //determinant
  TComponent det = determinant();
  ASSERT(det != 0);
  return r/det;
}

//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
DGtal::SimpleMatrix<TComponent, TM, TN> 
DGtal::SimpleMatrix<TComponent, TM, TN>::operator-(const Self& other) const
{
  SimpleMatrix<TComponent,TM,TN> res;
  for ( DGtal::Dimension i = 0; i < M*N; ++i )
    res.myValues[ i ] = this->myValues[i] - other.myValues[i];
  return res;
}
//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
DGtal::SimpleMatrix<TComponent, TM, TN> &
DGtal::SimpleMatrix<TComponent, TM, TN>::operator-=(const Self& other)
{
  for ( DGtal::Dimension i = 0; i < M*N; ++i )
    myValues[ i ] -= other.myValues[i];
  return *this;
}
//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
bool
DGtal::SimpleMatrix<TComponent, TM, TN>::operator==(const Self& other) const
{
  return myValues == other.myValues;
}

//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
typename DGtal::SimpleMatrix<TComponent, TN, TM> 
DGtal::SimpleMatrix<TComponent, TM, TN>::transpose() const
{
  DGtal::SimpleMatrix<TComponent, TN, TM> res;
  for (DGtal::Dimension i=0; i<M; i++)
    for (DGtal::Dimension j=0; j<N; j++)
      res.setComponent(j,i, this->operator()(i,j)); 
  return res;
}
//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension M, DGtal::Dimension N>
inline
typename DGtal::SimpleMatrix<TComponent,M,N>::ColumnVector  
DGtal::SimpleMatrix<TComponent, M, N>::operator*(const RowVector& other) const
{
  ColumnVector res;
  for (DGtal::Dimension i=0; i<M; i++)
    for (DGtal::Dimension k=0; k<N; k++)
      res[i]  += this->operator()(i, k )*other[k];
  
  return res;
}
//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension M, DGtal::Dimension N>
inline
typename DGtal::SimpleMatrix<TComponent,M,M>  
DGtal::SimpleMatrix<TComponent, M, N>::operator*(const DGtal::SimpleMatrix<TComponent,N,M>& other) const
{
  SimpleMatrix<TComponent,M,M> res;
  TComponent e = NumberTraits<TComponent>::ZERO;
  for (DGtal::Dimension i=0; i<M; i++)
    for (DGtal::Dimension j=0; j<M; j++)
      {
        for (DGtal::Dimension k=0; k<N; k++)
          {
            e += this->operator()(i, k )*other(k ,j );
          }
             
        res.setComponent(i,j,e);
        
        e = NumberTraits<TComponent>::ZERO;
      }
  return res;
}
//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension M, DGtal::Dimension N>
inline
DGtal::SimpleMatrix<TComponent, M,N> &  
DGtal::SimpleMatrix<TComponent, M, N>::operator/=(const TComponent& other) 
{
  for (DGtal::Dimension i=0; i<M*N; i++)
    this->myValues[i] /= other;
    
  return *this;
}//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension M, DGtal::Dimension N>
inline
DGtal::SimpleMatrix<TComponent, M,N>  
DGtal::SimpleMatrix<TComponent, M, N>::operator/(const TComponent& other) const
{
  Self resultat;
  for (DGtal::Dimension i=0; i<M*N; i++)
    resultat.myValues[i] = myValues[i]/other;
    
  return resultat;
}
//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension M, DGtal::Dimension N>
inline
DGtal::SimpleMatrix<TComponent, M,N> & 
DGtal::SimpleMatrix<TComponent, M,N>::operator*=(const TComponent& other)
{
  for (DGtal::Dimension i=0; i<M*N; i++)
    this->myValues[i] *= other;
    
  return *this;
}
//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension M, DGtal::Dimension N>
inline
DGtal::SimpleMatrix<TComponent, M,N>  
DGtal::SimpleMatrix<TComponent, M,N>::operator*(const TComponent& other) const
{
  Self resultat;
  for (DGtal::Dimension i=0; i<M*N; i++)
    resultat.myValues[i] = other*myValues[i];
    
  return resultat;
}

//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
void
DGtal::SimpleMatrix<TComponent, TM, TN>::setComponent(const DGtal::Dimension i,
					     const DGtal::Dimension j, 
					     const TComponent &aValue)
{
  ASSERT(i<M);
  ASSERT(j<N);
  myValues[i*N + j] = aValue;
}
//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
TComponent
DGtal::SimpleMatrix<TComponent, TM, TN>::operator()(const DGtal::Dimension i, 
					   const DGtal::Dimension j) const
{
  ASSERT(i<M);
  ASSERT(j<N);  
  return myValues[i*N + j];
}
//------------------------------------------------------------------------------
template<DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
TComponent&
DGtal::SimpleMatrix<TComponent, TM, TN>::operator()(const DGtal::Dimension i, 
					   const DGtal::Dimension j)
{
  ASSERT(i<M);
  ASSERT(j<N);  
  return myValues[i*N + j];
}

///////////////////////////////////////////////////////////////////////////////
// Interface - public :

/**
 * Writes/Displays the object on an output stream.
 * @param out the output stream where the object is written.
 */
template <DGtal::concepts::CEuclideanRing TComponent, DGtal::Dimension TM, DGtal::Dimension TN >
inline
void
DGtal::SimpleMatrix<TComponent,TM,TN>::selfDisplay ( std::ostream & out ) const
{
  out << "[SimpleMatrix] "<<M<<"x"<<N<< " [";
  for(DGtal::Dimension i = 0; i < M; ++i)
    {
      out<<"[";
      for(DGtal::Dimension j = 0; j < N; ++j)
        out<< this->operator()(i,j)<<" ";
      out<<"]";
    }
  out<<"]";
}

/**
 * Checks the validity/consistency of the object.
 * @return 'true' if the object is valid, 'false' otherwise.
 */
template <DGtal::concepts::CEuclideanRing TComponent,DGtal::Dimension M,DGtal::Dimension N>
inline
bool
DGtal::SimpleMatrix<TComponent,M,N>::isValid() const
{
    return true;
}





///////////////////////////////////////////////////////////////////////////////
// Implementation of inline functions                                        //

template <typename TComponent,DGtal::Dimension M,DGtal::Dimension N>
inline
std::ostream&
DGtal::operator<< ( std::ostream & out, 
                    const SimpleMatrix<TComponent,M,N> & object )
{
  object.selfDisplay( out );
  return out;
}

template <typename TComponent, DGtal::Dimension TM, DGtal::Dimension TN>
inline
DGtal::SimpleMatrix<TComponent, TM, TN>
DGtal::operator* ( const TComponent& scalar, const DGtal::SimpleMatrix<TComponent, TM, TN>& matrix)
{
		return matrix * scalar;
}
