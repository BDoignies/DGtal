namespace DGtal {
template<typename O>
typename O
GenericWriter<O>::importTXT(const std::string & filename)
{
 
  std::ifstream in;
  
  //Default constructor
  O  aObject();

  in.open(filename.c_str());
  boost::archive::text_iarchive oa(in);

  ia >> aObject;
  
  in.close(); 

  return true;
}


