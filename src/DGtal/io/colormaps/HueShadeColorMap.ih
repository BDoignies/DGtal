// ----------------------- Standard services ------------------------------


template <typename ValueType, int DefaultCycles>
inline
DGtal::HueShadeColorMap<ValueType,DefaultCycles>::HueShadeColorMap
( const ValueType & min,
  const ValueType & max,
  const unsigned int cycles )
  : myMin( min ), myMax( max ), myCycles( cycles )
{ }


template <typename ValueType, int DefaultCycles>
inline
DGtal::HueShadeColorMap<ValueType,DefaultCycles>::HueShadeColorMap
( const HueShadeColorMap<ValueType,DefaultCycles> & other )
  : myMin( other.myMin ), myMax( other.myMax ), myCycles( other.myCycles )
{ 
}

template <typename ValueType, int DefaultCycles>
inline
DGtal::HueShadeColorMap<ValueType,DefaultCycles>::~HueShadeColorMap()
{
}

template <typename ValueType, int DefaultCycles>
HueShadeColorMap<ValueType,DefaultCycles> &
HueShadeColorMap<ValueType,DefaultCycles>::operator=
( const HueShadeColorMap<ValueType,DefaultCycles> & other )
{
  if ( &other != this ) {
    myMin = other.myMin;
    myMax = other.myMax;
    myCycles = other.myCycles;
  }
  return *this;
}

///////////////////////////////////////////////////////////////////////////////
// Interface - public :

template<typename ValueType, int DefaultCycles>
inline
const ValueType &
DGtal::HueShadeColorMap<ValueType,DefaultCycles>::min() const
{
  return myMin;
}

template<typename ValueType, int DefaultCycles>
inline
const ValueType &
DGtal::HueShadeColorMap<ValueType,DefaultCycles>::max() const
{
  return myMax;
}

template<typename ValueType, int DefaultCycles>
inline
void
DGtal::HueShadeColorMap<ValueType,DefaultCycles>::setCycles( int cycles )
{
  myCycles = cycles;
}


template<typename ValueType, int DefaultCycles>
inline
LibBoard::Color
DGtal::HueShadeColorMap<ValueType,DefaultCycles>::operator()
  ( const ValueType & value ) const
{
  return getColor( myCycles, myMin, myMax, value );
}

/**
 * Writes/Displays the object on an output stream.
 * @param out the output stream where the object is written.
 */
template <typename ValueType, int DefaultCycles>
inline
void
DGtal::HueShadeColorMap<ValueType,DefaultCycles>::selfDisplay ( std::ostream & out ) const
{
  out << "[HueShadeColorMap " 
      << " min=" << myMin
      << " max=" << myMax
      << " cycles=" << myCycles
      << " ]";
}

/**
 * Checks the validity/consistency of the object.
 * @return 'true' if the object is valid, 'false' otherwise.
 */
template <typename ValueType, int DefaultCycles>
inline
bool
DGtal::HueShadeColorMap<ValueType,DefaultCycles>::isValid() const
{
    return true;
}

template <typename ValueType, int DefaultCycles>
inline
LibBoard::Color
DGtal::HueShadeColorMap<ValueType,DefaultCycles>::getColor
( const unsigned int cycles,
  const ValueType & min,
  const ValueType & max,
  const ValueType & value )
{
  const double scale = ( value - min ) / static_cast<double>( max - min );
  const double hue = 360 * ( scale * cycles - floor(scale * cycles));
  double red, green, blue;
  HueShadeColorMap<ValueType,DefaultCycles>::HSVtoRGB( red, green, blue, hue, 0.9, 1.0 );
  return LibBoard::Color( static_cast<int>( red * 255), 
			  static_cast<int>( green * 255),
			  static_cast<int>( blue * 255) );
}

///////////////////////////////////////////////////////////////////////////////
// Implementation of inline functions                                        //

template <typename ValueType, int DefaultCycles>
inline
std::ostream&
DGtal::operator<< ( std::ostream & out, 
		  const HueShadeColorMap<ValueType,DefaultCycles> & object )
{
  object.selfDisplay( out );
  return out;
}

