// ----------------------- Specialization DGtal::CACHE_READ_POLICY_LAST ------------------------------

template <typename TImageCache, typename TImageContainer, typename TImageFactory>
inline
TImageContainer *
DGtal::ImageCacheSpecializationsRead<TImageCache, TImageContainer, TImageFactory, DGtal::CACHE_READ_POLICY_LAST>::getPage(const Point & aPoint)
{
  if (myCacheImagesPtr==NULL)
    return NULL;

  if (myCacheImagesPtr->domain().isInside(aPoint))
    return myCacheImagesPtr;
  
  return NULL;
}

template <typename TImageCache, typename TImageContainer, typename TImageFactory>
inline
TImageContainer *
DGtal::ImageCacheSpecializationsRead<TImageCache, TImageContainer, TImageFactory, DGtal::CACHE_READ_POLICY_LAST>::getNextPageToDetach()
{
  return myCacheImagesPtr;
}

template <typename TImageCache, typename TImageContainer, typename TImageFactory>
inline
void
DGtal::ImageCacheSpecializationsRead<TImageCache, TImageContainer, TImageFactory, DGtal::CACHE_READ_POLICY_LAST>::updateCache(const Domain &aDomain)
{
  myCacheImagesPtr = myImageCache->getImageFactoryPtr()->request(aDomain);
}

// ----------------------- Specialization DGtal::CACHE_WRITE_POLICY_WT ------------------------------

template <typename TImageCache, typename TImageContainer, typename TImageFactory>
inline
void
DGtal::ImageCacheSpecializationsWrite<TImageCache, TImageContainer, TImageFactory, DGtal::CACHE_WRITE_POLICY_WT>::writeOnPage(TImageContainer * anImageContainer, const Point & aPoint, const Value &aValue)
{
  anImageContainer->setValue(aPoint, aValue);
  
  myImageCache->getImageFactoryPtr()->flushImage(anImageContainer); // DGtal::CACHE_WRITE_POLICY_WT
}

template <typename TImageCache, typename TImageContainer, typename TImageFactory>
inline
void
DGtal::ImageCacheSpecializationsWrite<TImageCache, TImageContainer, TImageFactory, DGtal::CACHE_WRITE_POLICY_WT>::flushPage(TImageContainer * anImageContainer)
{
}

