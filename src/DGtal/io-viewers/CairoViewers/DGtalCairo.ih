INLINE
DGtal::DGtalCairo & 
DGtal::DGtalCairo::operator<<(const QColor & aColor){
  myDefaultColor=aColor;
  return *this;
}

  /**
   * Set the default color for future drawing.
   *
   * @param aColor: a QColor (allow to set a transparency value).
   *
   **/
INLINE
DGtal::DGtalCairo & 
DGtal::DGtalCairo::operator<<(const DGtalCairo::StreamKey  & key){
  switch (key){
  case updateDisplay:{
    //updateList();
  }
  case addNewList:{
    createNewVoxelList();
  }
  }
  return *this;
}

INLINE
void
DGtal::DGtalCairo::createNewVoxelList(bool depthTest){
  std::vector< voxelGL > v;
  myVoxelSetList.push_back(v);
  myListVoxelDepthTest.push_back(depthTest);
  
}

INLINE
void
DGtal::DGtalCairo::createNewLineList(){
  std::vector< lineGL > v;
  myLineSetList.push_back(v);
}


INLINE
void
DGtal::DGtalCairo::createNewPointList(){
  std::vector< pointGL > v;
  myPointSetList.push_back(v);
}

INLINE
void
DGtal::DGtalCairo::setFillColor(QColor aColor){
  myCurrentFillColor=aColor;  
}

INLINE
void
DGtal::DGtalCairo::setLineColor(QColor aColor){
  myCurrentLineColor=aColor;  
}

INLINE
QColor
DGtal::DGtalCairo::getFillColor(){
  return myCurrentFillColor;  
}

INLINE
QColor
DGtal::DGtalCairo::getLineColor(){
  return myCurrentLineColor;  
}

template <typename TDrawableWithDGtalCairo>
INLINE
DGtal::DGtalCairo & 
DGtal::DGtalCairo::operator<<( const TDrawableWithDGtalCairo & object )
{
  BOOST_CONCEPT_ASSERT((CDrawableWithDGtalCairo< TDrawableWithDGtalCairo >));
  
  object.selfDrawCairo( *this );
  return *this;
}

INLINE
std::string
DGtal::DGtalCairo::getMode( const std::string & objectName ) const
{
  ModeMapping::const_iterator itm = myModes.find( objectName );
  return itm == myModes.end() ? "" : itm->second;
}

INLINE
void
DGtal::DGtalCairo::addVoxel(int x, int y, int z, QColor aColor, double width)
{
  voxelGL v;
  
  v.x=x;
  v.y=y;
  v.z=z;
  v.R=aColor.red();
  v.G=aColor.green();
  v.B=aColor.blue();
  v.T=aColor.alpha();
  v.width=width;
  
  (myVoxelSetList.at(myVoxelSetList.size()-1)).push_back(v);
}

INLINE
void
DGtal::DGtalCairo::addPoint(double x, double y, double z ,const QColor &aColor, double size)
{
  pointGL p;
  
  p.x=x;
  p.y=y;
  p.z=z;
  p.R=aColor.red();
  p.G=aColor.green();
  p.B=aColor.blue();
  p.T=aColor.alpha();
  p.size=size;
  
  (myPointSetList.at(myPointSetList.size()-1)).push_back(p);  
   
}

INLINE
void
DGtal::DGtalCairo::addLine(double x1, double y1, double z1,  double x2, double y2, double z2,
			       const QColor & aColor, double width)
{
  lineGL l;
  
  l.x1=x1;
  l.y1=y1;
  l.z1=z1;

  l.x2=x2;
  l.y2=y2;
  l.z2=z2;
  
  l.R=aColor.red();
  l.G=aColor.green();
  l.B=aColor.blue();
  l.T=aColor.alpha();
  l.width=width;
  
  (myLineSetList.at(myLineSetList.size()-1)).push_back(l);
}

INLINE
void
DGtal::DGtalCairo::addQuad(double x1, double y1, double z1,  double x2, double y2, double z2,
			       double x3, double y3, double z3,  double x4, double y4, double z4, QColor aColor)
{
  quadGL aQuad;
  
  aQuad.x1=x1; aQuad.y1=y1; aQuad.z1=z1;
  aQuad.x2=x2; aQuad.y2=y2; aQuad.z2=z2;
  aQuad.x3=x3; aQuad.y3=y3; aQuad.z3=z3;
  aQuad.x4=x4; aQuad.y4=y4; aQuad.z4=z4;
  aQuad.R=aColor.red();
  aQuad.G=aColor.green();
  aQuad.B=aColor.blue();
  aQuad.T=aColor.alpha();
  
  myQuadList.push_back(aQuad);  
}

