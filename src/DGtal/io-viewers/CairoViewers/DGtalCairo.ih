INLINE
void 
DGtal::DGtalCairo::addKSPointel(double x, double y, double z, double size, 
				    const QColor &color)
{
  pointGL pt;
  pt.x=x; pt.y=y; pt.z=z; pt.size=size; pt.R=color.red();
  pt.G=color.green(); pt.B=color.blue(); pt.T=color.alpha();
  myKSPointelList.push_back(pt);
}

INLINE
void 
DGtal::DGtalCairo::addKSVoxel(int x, int y, int z,  
				  const QColor &aColor)
{
  voxelGL v;
  
  v.x=x;
  v.y=y;
  v.z=z;
  v.R=aColor.red();
  v.G=aColor.green();
  v.B=aColor.blue();
  v.T=aColor.alpha();
  v.width=0.47;
  
  (myVoxelSetList.at(0)).push_back(v);
}

INLINE
void
DGtal::DGtalCairo::addKSLinel(double x1, double y1, double z1,
				  double x2, double y2, double z2,
				  double width, const QColor &color){
  lineGL l;
  l.x1=x1; l.y1=y1; l.z1=z1; l.x2=x2; l.y2=y2; l.z2=z2; 
  l.width=width; l.R= color.red(); l.G= color.green(); l.B=color.blue(); l.T=color.alpha();
  myKSLinelList.push_back(l);
}

