INLINE
DGtal::DGtalCairo & 
DGtal::DGtalCairo::operator<<(const QColor & aColor){
  myDefaultColor=aColor;
  return *this;
}




  /**
   * Set the default color for future drawing.
   *
   * @param aColor: a QColor (allow to set a transparency value).
   *
   **/

INLINE
DGtal::DGtalCairo & 
DGtal::DGtalCairo::operator<<(const DGtalCairo::StreamKey  & key){
  switch (key){
  case updateDisplay:{
    updateList();
  }
  case addNewList:{
    createNewVoxelList();
  }
  }
  return *this;
}


INLINE
void
DGtal::DGtalCairo::createNewVoxelList(bool depthTest){
  std::vector< voxelGL > v;
  myVoxelSetList.push_back(v);
  myListVoxelDepthTest.push_back(depthTest);
  
}

INLINE
void
DGtal::DGtalCairo::createNewLineList(){
  std::vector< lineGL > v;
  myLineSetList.push_back(v);
  //fprintf(stdout, "createNewLineList\n");
}


INLINE
void
DGtal::DGtalCairo::createNewPointList(){
  std::vector< pointGL > v;
  myPointSetList.push_back(v);
}


INLINE
void
DGtal::DGtalCairo::setFillColor(QColor aColor){
  myCurrentFillColor=aColor;  
}


INLINE
void
DGtal::DGtalCairo::setLineColor(QColor aColor){
  myCurrentLineColor=aColor;  
}


INLINE
QColor
DGtal::DGtalCairo::getFillColor(){
  return myCurrentFillColor;  
}

INLINE
QColor
DGtal::DGtalCairo::getLineColor(){
  return myCurrentLineColor;  
}




template <typename TDrawableWithDGtalCairo>
INLINE
DGtal::DGtalCairo & 
DGtal::DGtalCairo::operator<<( const TDrawableWithDGtalCairo & object )
{
  BOOST_CONCEPT_ASSERT((CDrawableWithDGtalCairo< TDrawableWithDGtalCairo >));
  
  object.selfDrawCairo( *this );
  return *this;
}






INLINE
std::string
DGtal::DGtalCairo::getMode( const std::string & objectName ) const
{
  ModeMapping::const_iterator itm = myModes.find( objectName );
  return itm == myModes.end() ? "" : itm->second;
}


