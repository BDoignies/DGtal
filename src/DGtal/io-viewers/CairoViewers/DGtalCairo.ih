INLINE
void
DGtal::DGtalCairo::addPoint(double x, double y, double z ,const QColor &aColor, double size){
  pointGL p;
  p.x=x;
  p.y=y;
  p.z=z;
  p.R=aColor.red();
  p.G=aColor.green();
  p.B=aColor.blue();
  p.T=aColor.alpha();
  p.size=size;
  
  (myPointSetList.at(myPointSetList.size()-1)).push_back(p);  
   
}

