namespace LibBoard {

Shape::Shape( Color pen,
	      Color fill,
	      double lineWidth, 
	      LineStyle style,
	      const LineCap cap,
	      const LineJoin join,
	      int depthValue )
  : _depth( depthValue ),
    _penColor( pen ),
    _fillColor( fill ), 
    _lineWidth( lineWidth ),
    _lineStyle( style ),
    _lineCap( cap ), 
    _lineJoin( join )
{
}

Dot::Dot( double x, double y,
	  Color color, 
	  double lineWidth,
	  int depthValue )
  : Shape( color, 
	   Color::None, 
	   lineWidth, SolidStyle, RoundCap, MiterJoin, depthValue ),
    _x( x ), _y( y ) 
{
}

Line::Line( double x1, double y1, double x2, double y2, 
